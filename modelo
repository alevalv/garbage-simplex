Xi: Coordenada en X de la ciudad i
Yi: Coordenada en Y de la ciudad i
n: Número de Ciudades
M: Constante muy grande


Di: Distancia de la ciudad i hasta el basurero
Dxi: Distancia en X de la ciudad i hasta el basurero
Dyi: Distancia en Y de la ciudad i hasta el basurero
Bx: Coordenada en X del basurero
By: Coordenada en Y del basurero
DIMIN: Distancia de la ciudad más cercana al basurero

Nxi = 1 Si Bx >= Dxi
Nxi = 0 Sino

Nyi = 1 Si By >= Dyi
Nyi = 0 Sino


max z=DIMIN

Dxi >= Bx - Xi - M(1-Nxi)
Xi >= Bx - Dxi - M + MNxi
Xi + M >= Bx - Dxi + MNxi <<
-Bx + Dxi - MNxi >= -Xi - M

Dxi <= Bx - Xi + M(1-Nxi)
Xi <= Bx - Dxi + M - MNxi
Xi -M <= Bx - Dxi - MNxi <<
-Bx + Dxi + MNxi <= -Xi + M

Dxi >= Xi - Bx - MNxi
-Xi >= -Dxi - Bx - MNxi <<
Dxi + Bx + MNxi >= Xi

Dxi <= Xi - Bx + MNxi
-Xi <= -Dxi - Bx + MNxi <<
Dxi + Bx - MNxi <= Xi

Dyi >= By - Yi - M(1-Nyi)
Yi >= By - Dyi -M + MNyi <<
-By + Dyi - MNyi >= -Yi - M

Dyi <= By - Yi + M(1-Nyi)
Yi <= By - Dyi + M - MNyi <<
-By + Dyi + MNyi <= -Yi + M

Dyi >= Yi - By - MNyi
-Yi >= -Dyi - By - MNyi <<
Dyi + By + MNyi >= Yi

Dyi <= Yi - By + MNyi
-Yi <= -Dyi - By + MNyi <<
Dyi + Byi - MNyi <= Yi

Dxi + Dyi = Di <<
Dxi + Dyi - Di = 0

DIMIN <= Di <<
DIMIN - Di <= 0

Obvias

Di >= 0
Dxi >= 0
Dyi >= 0
Bx >= 0
By >= 0
DIMIN >= 0
Nxi >= 0
Nyi >= 0

